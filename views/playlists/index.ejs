<div class="row breadcrumbs">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <ul class="breadcrumbs">
            <li><a href="#"><i class="fa fa-home"></i></a></li>
            <li><a href="#">Play Lists</a></li>

        </ul>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right">
        <a href='/playlists/edit?id=new' class="btn btn-xs btn-success" type="button"><i class="fa fa-plus"></i> New</a>
    </div>

</div>


<div class="row">
    <div class="boxed no-padding col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="inner">
            <div class="title-bar white">
                <h3>Play Lists</h3>
            </div>
            <div class="table-holder">

                <table id="datatables-table" class="datatables">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% _.each(playLists, function (playList) { %>

                    <tr>
                        <td><%= playList.name || '-' %></td>
                        <td><%= playList.description || '-' %></td>
                        <td>
                            <a href='/playlists/edit?id=<%= playList.id %>'><i class='fa fa-pencil'></i> Edit</a>
                        </td>
                    </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>